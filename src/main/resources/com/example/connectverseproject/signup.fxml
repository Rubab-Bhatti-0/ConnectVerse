<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.effect.Reflection?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.shape.Rectangle?>
<AnchorPane prefHeight="532.0" prefWidth="356.0" style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #5E35B1 50%,#0D47A1 0%,#64B5F6 100%,);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.connectverseproject.signup">
   <children>
      <AnchorPane layoutX="12.0" layoutY="23.0" prefHeight="482.0" prefWidth="333.0" style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%,  #64B5F6,#5E35B1); -fx-background-radius: 15;">
         <children>
            <!-- Logo with 3D Effect (Shadow + Reflection + Glow) -->
            <ImageView fx:id="signupimage" fitHeight="90.0" fitWidth="115.0" layoutX="-7.0" layoutY="-10.0" pickOnBounds="true" preserveRatio="true">
               <clip>
                  <Rectangle arcHeight="40.0" arcWidth="40.0" height="200.0" width="200.0" />
               </clip>
               <effect>
                  <DropShadow color="#00000088" offsetX="5.0" offsetY="5.0" radius="18.0" />
               </effect>
            </ImageView>

            <!-- Reflection under Logo -->
            <ImageView fx:id="photoReflection" fitHeight="150.0" fitWidth="180.0" layoutX="90.0" layoutY="280.0" opacity="0.25" pickOnBounds="true" preserveRatio="true" scaleY="-1">
               <effect>
                  <Reflection bottomOpacity="0.0" fraction="0.6" topOpacity="0.4" />
               </effect>
            </ImageView>


            <Label layoutX="31.0" layoutY="106.0" text="Username" textFill="WHITE">
               <font><Font name="Segoe UI Semibold" size="15.0" /></font>
            </Label>
            <Label layoutX="45.0" layoutY="153.0" text="Email" textFill="WHITE">
               <font><Font name="Segoe UI Semibold" size="17.0" /></font>
            </Label>
            <Label layoutX="33.0" layoutY="210.0" text="Password" textFill="WHITE">
               <font><Font name="Segoe UI Semibold" size="15.0" /></font>
            </Label>
            <Label layoutX="41.0" layoutY="380.0" text="Already have an account!" textFill="WHITE" />

            <Button fx:id="login_signup" layoutX="193.0" layoutY="371.0" onAction="#goToLogin" prefHeight="36.0" prefWidth="99.0" style="-fx-background-color: white; -fx-text-fill: #1565c0; -fx-background-radius: 10;" text="Login">
               <font><Font name="Segoe UI Bold" size="16.0" /></font>
            </Button>

            <Button fx:id="signup" layoutX="131.0" layoutY="312.0" onAction="#signupAndReturn" prefHeight="36.0" prefWidth="89.0" style="-fx-background-color: #0d47a1; -fx-text-fill: white; -fx-background-radius: 8;" text="Signup">
               <font><Font name="Segoe UI Bold" size="16.0" /></font>
            </Button>

            <Label layoutX="90.0" layoutY="23.0" prefHeight="52.0" prefWidth="180.0" text="ConnectVerse" textFill="WHITE">
               <font><Font name="System Bold Italic" size="26.0" /></font>
            </Label>

            <Label layoutX="47.0" layoutY="258.0" prefWidth="267.0" text="Password must be at least 8 characters, include a number, and a special character." textFill="WHITE" wrapText="true" />

            <Button fx:id="ps_show_signup" layoutX="280.0" layoutY="207.0" onAction="#togglePasswordVisibility" prefHeight="34.0" prefWidth="42.0" style="-fx-background-color: white; -fx-background-radius: 5;">
               <graphic>
                  <ImageView fx:id="pass_icon_sign" fitHeight="16.0" fitWidth="27.0" preserveRatio="true" />
               </graphic>
            </Button>
            <PasswordField fx:id="passwordField" layoutX="129.0" layoutY="207.0" prefHeight="34.0" prefWidth="151.0" style="-fx-background-radius: 6; -fx-border-color: #90caf9; -fx-border-radius: 6;" />
      
            <TextField fx:id="usernameField" layoutX="127.0" layoutY="99.0" prefHeight="36.0" prefWidth="187.0" style="-fx-background-radius: 6; -fx-border-color: #90caf9; -fx-border-radius: 6;" />
            <TextField fx:id="emailfeild" layoutX="127.0" layoutY="153.0" prefHeight="36.0" prefWidth="187.0" style="-fx-background-radius: 6; -fx-border-color: #90caf9; -fx-border-radius: 6;" />
         </children>
      </AnchorPane>
      <TextField fx:id="pas_feild" layoutX="140.0" layoutY="228.0" prefHeight="36.0" prefWidth="151.0" style="-fx-background-color: white; -fx-background-radius: 6;" visible="false" />
   </children>
</AnchorPane>
